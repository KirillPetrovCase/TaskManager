@model Order
@inject TaskManager.Data.MongoDb.MongoDbUserRepository userRepository

<div class="row my-2">
    <div>
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <span class="badge bg-light">
                            Автор: @userRepository.GetNameById(@Model.OwnerId)
                        </span>
                        <span class="badge bg-light">
                            Дата регистрации: @Model.RegisterTime.ToShortDateString()
                        </span>
                        <span class="badge bg-light">
                            Срок: @Model.Deadline.ToShortDateString()
                        </span>
                    </div>
                    <div class="col text-end">
                        @if (Model.PerformerId is not null)
                        {
                            <span class="badge bg-primary">
                                Исполнитель: @userRepository.GetNameById(@Model.PerformerId)
                            </span>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <p>
                    @Model.Description
                </p>
                @if (Model.Status == TaskManager.Data.Contracts.OrderStatus.InWork)
                {
            <div class="row">
                <div class="col"></div>
                <div class="col-auto">
                    <a class="btn btn-danger btn-sm rounded" style="width:150px;" asp-action="UnsubscribeFromOrder" asp-controller="Admin" asp-route-orderId="@Model.Id">
                        Отказаться
                    </a>
                </div>
                <div class="col-auto">
                    <a class="btn btn-info btn-sm rounded" style="width:150px;" asp-action="ActiveChat" asp-controller="Message" asp-route-orderId="@Model.Id">
                        Чат
                        @if (@Model.NewMessageForAdmin)
                        {
                            <span class="badge bg-danger rounded">New</span>
                        }
                    </a>
                </div>
                <div class="col-auto">
                    <a class="btn btn-success btn-sm rounded" style="width:150px;" asp-action="CompleteOrder" asp-controller="Admin" asp-route-orderId="@Model.Id">
                        Завершить
                    </a>
                </div>
            </div>
                }
                @if (Model.Status == TaskManager.Data.Contracts.OrderStatus.Awaiting)
                {
                    <div class="row">
                        <div class="col"></div>
                        <div class="col-auto">
                            <a class="btn btn-success btn-sm rounded" style="width:150px;" asp-action="SubscribeToOrder" asp-controller="Admin" asp-route-orderId="@Model.Id">
                                Принять
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>