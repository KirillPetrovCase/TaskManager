@model TaskManager.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Авторизация";
}

<div class="container p-5">
    <div class="row">
        <div class="col-4"></div>

        <div class="col">
            <p class="lead text-center">Авторизация пользователя</p>
            <form method="post" asp-controller="Account" asp-action="Login">
                <div class="form-group mt-2">
                    <label asp-for="UserName"></label>
                    <input class='form-control' asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-info"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Password"></label>
                    <input class='form-control' asp-for="Password">
                    <span asp-validation-for="Password" class="text-info"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-info"></div>
                <div class='form-group mt-4'>
                    <div class="row">
                        <div class="col">
                            <button type='submit' class="btn btn-dark w-100">Логин</button>
                        </div>
                        <div class="col ">
                            <a class='btn btn-dark w-100' asp-controller="Account" asp-action="Register">Регистрация</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-4"></div>
    </div>
</div>