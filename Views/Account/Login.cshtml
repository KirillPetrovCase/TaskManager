@model TaskManager.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Авторизация";
}

<div class='container pb-5 w-50'>
    <form method="post" asp-controller="Account" asp-action="Login">
        <h3 class="form-text mb-4">Авторизация пользователя</h3>
        <div class='form-group'>
            <label asp-for="UserName"></label>
            <input class='form-control' asp-for="UserName">
            <span asp-validation-for="UserName" class="text-info"></span>
        </div>
        <div class='form-group'>
            <label asp-for="Password"></label>
            <input class='form-control' asp-for="Password">
            <span asp-validation-for="Password" class="text-info"></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-info"></div>
        <div class='form-group'>
            <div class="row">
                <div class="col-md-6">
                    <button type='submit' class='btn btn-block btn-primary btn-md'>Логин</button>
                </div>
                <div class="col-md-6">
                    <a class='btn btn-block btn-primary btn-md' asp-controller="Account" asp-action="Register">Регистрация</a>
                </div>
            </div>
        </div>
    </form>
</div>