@{
    ViewData["Title"] = "Создать задачу";
}

@model TaskManager.ViewModels.User.CreateOrderViewModel

<div class="container p-5">
    <div class="row">
        <div class="col-3"></div>

        <div class="col">
            <p class="lead text-center">Создание задачи</p>
            <form method="post" asp-controller="User" asp-action="CreateOrder">
                <div class='form-group mt-2'>
                    <label asp-for="Description"></label>
                    <textarea rows="10" class='form-control' asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-info"></span>
                </div>
                <div class='form-group mt-2'>
                    <label asp-for="Deadline"></label>
                    <input class='form-control' asp-for="Deadline">
                    <span asp-validation-for="Deadline" class="text-info"></span>
                </div>
                <div class='form-group mt-4'>
                    <div class="row">
                        <div class="col">
                            <button type='submit' class="btn btn-dark w-100">Создать</button>
                        </div>
                        <div class="col ">
                            <a class='btn btn-outline-dark w-100' asp-controller="User" asp-action="UserOrders">Вернуться</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-3"></div>
    </div>
</div>