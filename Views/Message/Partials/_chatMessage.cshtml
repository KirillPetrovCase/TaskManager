@model Message
@inject TaskManager.Data.MongoDb.MongoDbUserRepository userRepository

<div class="container mb-5">
    <div class="row">
        <div class="col-2"></div>
        <div class="col">
            <div class="row border-bottom border-top">
                    @Model.SenderName
                <div class="col text-end">
                    @Model.Time.ToString("M")
                    @Model.Time.ToString("t")
                </div>
            </div>
            <div class="row">
                <p>
                    @Model.MessageText
                </p>
            </div>
        </div>
        <div class="col-2"></div>
    </div>
</div>