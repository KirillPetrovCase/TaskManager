@{
    ViewData["Title"] = "Записи чата";
}

@model IEnumerable<Message>

<div class="container">
    <div class="row mb-5">
        <a asp-action="OrderArchive" asp-controller="Admin" class='btn btn-dark btn-sm rounded'>Вернуться</a>
    </div>
    <div class="row border-bottom mb-3">
        <p>
            Архивированный чат
        </p>
    </div>
    <div class="row" style="height:100%;">
        <div class="col h-100 overflow-auto">
            @if (Model is not null)
            {
                foreach (var message in Model)
                {
                    <partial name="Partials/_chatMessage" model="message" />
                }
            }
        </div>
    </div>
</div>